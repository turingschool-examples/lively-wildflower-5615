<h1><%= @guest.name %></h1>

<h3>Stayed in: </h3>
<% @guest.rooms.each do |room| %>
<ul>
  <li><%= room.hotel.name %>, <%= room.suite %>, Room Rate: <%= room.rate %></li>
</ul>
<% end %>


<h3>Add Room to Guest</h3>

<%= form_with url: "/guests/#{@guest.id}", method: :post,  local: true do |form|  %>
  <%=form.label "room_id"%>
  <%=form.text_field "room_id" %>
  <%=form.submit "submit"%>
<% end %>